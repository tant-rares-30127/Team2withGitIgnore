@model IEnumerable<Team2Application.Models.LibraryResource>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section scripts {
        <script src="~/lib/microsoft-signalr/signalr.js"></script>
        <script src="~/js/IndexLibrary.js"></script>
    }

    <h1>Index</h1>

    <table class="table table-striped table-bordered table-hover" id="libraryTableBodyId">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recommandation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr library-id="@item.Id">
                    <td class="library-name" library-name="@item.Name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="library-recommandation" library-recommandation="@item.Recommandation">
                        @Html.DisplayFor(modelItem => item.Recommandation)
                    </td>
                    <td class="library-url" library-url="@item.Url">
                        <a href="@Html.DisplayFor(modelItem => item.Url)">@Html.DisplayFor(modelItem => item.Url)</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
